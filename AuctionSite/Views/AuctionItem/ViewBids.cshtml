@model IEnumerable<AuctionSite.Models.AuctionItemBidViewModel>

@{
    ViewBag.Title = "View Bids";
}

<h2>View Bids</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bid)
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bid.Price)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.AuctionItemID })
        </td>
    </tr>
}

</table>
